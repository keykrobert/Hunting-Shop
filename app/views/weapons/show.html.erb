
<% @weapon.photos.each do |photo| %>
  <%= image_tag(photo.url, style: "width: 1000px;") %><br>
<% end %>
<br>
<h2>Name: <%= @weapon.name %></h2><br>
<h2>Desc: <%= @weapon.desc %></	h2><br/>
<h2>Price: <%= @weapon.price %></h2><br/>

<%= form_for :comment, url:comments_path do |f| %>
<%= render 'comments/form', f:f%>
<%= f.hidden_field :object_type, value: @weapon.class.name%>
<%= f.hidden_field :object_id, value: @weapon.id%>
<%= f.submit "Create" %>
<% end %>

<% Comment.where(object: @weapon).each do |comment| %>
<br>User:
<%= comment.user.email.split('@').first %><br>:
<%=comment.text%><hr>
<%end%> 